{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "lib": [
      "es5","es6","es2015","es7","es2016","es2017","es2018","esnext"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/server.ts"
  ]
}